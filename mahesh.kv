<ContentNavigationDrawer>:
    orientation: 'vertical'
    padding: '8dp'
    spacing: '8dp'

    AnchorLayout:
        anchor_x: 'left'
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "50dp","50dp"
            source: 'images/mahesh1.jpeg'

        MDLabel:
            text: 'Astro Mahesh'
            font_style: 'Button'
            size_hint_y:None
            height: self.texture_size[1]
            halign: 'center'
            adaptive_height: True


    ScrollView:

        MDList:
            OneLineListItem:
                text: 'Home'
                on_press:
                    root.nav_drawer.set_state('close')
                    root.screen_manager.current = 'home_screen'

            OneLineListItem:
                text: 'Gem Stone'
                on_press:
                    root.nav_drawer.set_state('close')
                    root.screen_manager.current = 'gem_stone'

            OneLineListItem:
                text: 'About us'
                on_press:
                    root.nav_drawer.set_state('close')
                    root.screen_manager.current = 'about_screen'

            OneLineListItem:
                text: 'consult'
                on_press:
                    root.nav_drawer.set_state('close')
                    root.screen_manager.current = 'consult_screen'


